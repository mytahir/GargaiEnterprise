<Page x:Class="AMD.Views.NewCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AMD.Views"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:Viewer="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewCustomerPage" Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                        Grid.Row="0" Margin="20 20 0 20">
            <TextBox x:Name="txtFullName"
    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
    VerticalAlignment="Top" HorizontalAlignment="Left"
    Width="300"  Margin="0 0 20 0"
    AcceptsReturn="True"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
    materialDesign:HintAssist.Hint="Customer Name"
    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextFieldTextBoxEnabledComboBox}" />
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel Margin="20 0 0 0">

                    <ComboBox Margin="0 0 0 10"
                    Style="{StaticResource MaterialDesignFilledComboBox}"
                    x:Name="ItemsToPrint"
                    materialDesign:HintAssist.Hint="Select Items"
                    Width="300" />

                    <TextBox x:Name="txtPiecesShopPrice"
    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
    VerticalAlignment="Top" Margin="0 0 0 10"
    Width="300" Text="{Binding SelectedItem.PiecesShopPrice, ElementName=ItemsToPrint}"
    AcceptsReturn="True"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
    materialDesign:HintAssist.Hint="Shop Price"
    IsEnabled="False"/>


                    <TextBox x:Name="txtItemsQuantity"
    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
    VerticalAlignment="Top" Margin="0 0 0 10"
    Width="300"
    AcceptsReturn="True"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
    materialDesign:HintAssist.Hint="Initial Balance"
    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextFieldTextBoxEnabledComboBox}" />

                    <TextBox x:Name="txtCreditBalance"
    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
    VerticalAlignment="Top"  Margin="0 0 0 10"
    Width="300"
    AcceptsReturn="True"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
    materialDesign:HintAssist.Hint="Credit Balance"
    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextFieldTextBoxEnabledComboBox}" />

                    <TextBox x:Name="txtCustomerComment"
    Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
    VerticalAlignment="Top"
    Width="300"
    AcceptsReturn="True"
    TextWrapping="Wrap"
    VerticalScrollBarVisibility="Auto"
    materialDesign:HintAssist.Hint="Customer Comment"
    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignOutlinedTextFieldTextBoxEnabledComboBox}" />

                </StackPanel>

            </Grid>
            <Grid Grid.Column="1">

                <DataGrid x:Name="dgvItems" AutoGenerateColumns="False" 
                          VerticalScrollBarVisibility="Auto" Margin="20 0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=FullName}" Header="Full Name" IsReadOnly="True"/>
                        <DataGridTextColumn Binding="{Binding Path=Username}" Header="Username"  IsReadOnly="True"/>
                        <DataGridTextColumn Binding="{Binding Path=Password}" Header="Password"  IsReadOnly="True"/>
                        <DataGridTextColumn Binding="{Binding Path=Role}" Header="Role"  IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>

